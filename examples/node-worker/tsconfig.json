{
  "compilerOptions": {
    "noEmit": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["@types/node", "react/experimental"],
    "esModuleInterop": false,

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true
  }
}
